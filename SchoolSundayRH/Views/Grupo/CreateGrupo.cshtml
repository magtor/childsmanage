@model SchoolSundayRH.Models.Grupos;
@{
    ViewData["Title"] = "Periodo";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Registrar Grupo</h3>
    </div>
    <form asp-action="Create1">
        <div class="card-body">
            <div class="row">
                <div class="col-4 text-center">

                    <div class="btn btn-primary">
                        <input type="file" id="imageBrowser" />
                    </div>
                    <div id="imgPreview" src="https://via.placeholder.com/120x120" class="img-fluid" style="margin-top: 5px">
                        <img class="img-responsive" id="targetImg" />
                        <div class="caption">
                            <a href="#" onclick="ClearPreview()"><i class="glyphicon glyphicon-trash"></i></a>
                            <span id="description"></span>
                        </div>
                        <a href="#" class="btn btn-default" id="uploadImage" onclick="UploadImage">Upload</a>
                    </div>

                </div>
                <div class="col-8">

                    <div class="row">

                        <div class="form-group col-4 ">
                            <label for="name">First Name</label>
                            <input type="text" class="form-control" id="name1" name="name1">
                        </div>
                        <div class="form-group col-4 ">
                            <label for="name">Second Name</label>
                            <input type="text" class="form-control" id="name2" name="name2">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-4 ">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName">
                        </div>

                        <div class="form-group col-4 ">
                            <label for="surname">Surname</label>
                            <input type="text" class="form-control" id="surname" name="surname">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
             <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
     </form>
</div>