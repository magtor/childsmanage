@model SchoolSundayRH.Repository.PaginatedList  ;
    <div class="container">
       
            <ul class="pagination justify-content-end">

                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="DetalleSecc" asp-action="IndexDetalleSecc" asp-route-pg="1">Primero</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="DetalleSecc" asp-action="IndexDetalleSecc" asp-route-pg="@(Model.CurrentPage - 1)">Anterior</a>
                    </li>
                }

                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="DetalleSecc" asp-action="IndexDetalleSecc" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="DetalleSecc" asp-action="IndexDetalleSecc" asp-route-pg="@(Model.CurrentPage + 1)">Proximo</a>
                    </li>
                    <li>
                        <a class="page-link" asp-controller="DetalleSecc" asp-action="IndexDetalleSecc" asp-route-pg="@(Model.TotalPages)">Anterior</a>
                    </li>
                }
            </ul>
       
    </div>

