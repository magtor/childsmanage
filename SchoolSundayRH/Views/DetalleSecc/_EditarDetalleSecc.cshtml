@model SchoolSundayRH.Models.Detallessecciones
@{
    List<SelectListItem> itemsgrados = ViewBag.ItemGrados;
    List<SelectListItem> itemsniveles = ViewBag.ItemNiveles;
    List<SelectListItem> itemsletras = ViewBag.Itemletras;

}
<div class="modal fade" id="EditDetalleSecc">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addMasterLabel">Agregar Seccion</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Agregar Secciones</h3>
                        </div>
                        <form id="detalleseccForm">
                            <div class="card-body">
                                <input type="hidden" id ="iddetallesec" name="iddetallesec" value="@ViewBag.iddetsecc" />
                                <input hidden id="DetSeccPeriodo" name="DetSeccPeriodo" value="@ViewBag.periodo" />
                                <div class="form-row">
                                    <div class="form-group" col-md-6>
                                        <label for="exampleInputNombre1">Letra</label>
                                        <div class="col-md-20">
                                            <select name="Letra" id="Letra" class="form-control" asp-items="itemsletras"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group" col-md-6>
                                        <label for="exampleInputNombre1">Grado/Año</label>
                                        <div class="col-md-20">
                                            <select name="SelGrado" id="SelGrado" class="form-control" asp-items="itemsgrados"></select>
                                            <input type="hidden" id="gradoid" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group" col-md-6>
                                        <label for="exampleInputNombre1">Nivel</label>
                                        <div class="col-md-20">
                                            <select name="Nivel" id="Nivel" class="form-control" asp-items="itemsniveles"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group" col-md-6>
                                        <label for="exampleInputCapacidad">Capacidad</label>
                                        <div class="col-md-20">
                                            <input type="text" name="inCapacidad" id="inCapacidad" class="form-control" placeholder="Capacidad" value="@ViewBag.capacidad">
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </form>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="Button" id="editDetSecc" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
