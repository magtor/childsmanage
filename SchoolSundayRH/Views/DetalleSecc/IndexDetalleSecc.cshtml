@model IEnumerable<SchoolSundayRH.ViewModels.SeccionRegViewModel>;
@using SchoolSundayRH.Repository;
@{
    ViewData["Title"] = "Maestros";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    PaginatedList pager = new PaginatedList();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }


}
<div class="card-body table-responsive p-0">
    <div id="PlaceHolderDetalleSecc"></div>
    <button type="button" class="btn btn-primary" data-toggle="ajax-detasecc" data-target="#addDetalleSecc"
            data-url="@Url.Action("_CreateDetalleSecc")">
        Registrar Seccion
    </button>
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>

                <th>Letra</th>
                <th>Grado</th>
                <th>Nivel</th>
                <th>Capacidad</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var detallesecc in Model)
            {
                <tr>
                    <td>@detallesecc.LetraDescripcion</td>
                    <td>@detallesecc.GradoDescripcion</td>
                    <td>@detallesecc.NivelDescripcion</td>
                    <td>@detallesecc.Capacidad</td>
                    <td>
                        <div id="PlaceHolderEditDetalleSecc">
                            <button type="button" class="btn btn-primary" data-toggle="ajax-editardetasecc" data-target="#EditarDetalleSecc"
                                    data-url="@Url.Action("_EditarDetalleSecc",new {id=@detallesecc.Detalleseccionid})">
                                Editar Seccion
                            </button>
                        </div>
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <partial name="_pager" model="@pager" />
</div>
