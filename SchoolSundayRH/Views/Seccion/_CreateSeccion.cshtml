@model SchoolSundayRH.Models.Secciones;
<div class="modal fade" id="addSecciones">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addSeccionLabel">Agregar Letra</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="seccionForm" asp-action="CreateSeccion1">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group" col-md-6>
                                <label for="exampleInputNombre1">Letras</label>
                                <input type="text" class="form-control" asp-for="Descripcion" placeholder="Letra">
                            </div>   
                            
                        </div>                       
                        
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" data-save="modal">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
