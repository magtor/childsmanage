@model SchoolSundayRH.Models.Listarcabecera;
@{
    ViewData["Title"] = "Niños";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    List<SelectListItem> itemsmaestros = ViewBag.ItemsTeacher;
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tomar Asistencia</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create1">
        <div class="card-body">
            <div class="form-row">
                <div class="form-group" col-md-6>
                    <label for="InputFecha">Fecha</label>
                    <input type="text" class="form-control" asp-for="Fechalista" placeholder="Fecha Asistencia" value="@DateTime.Now.ToString("dd-MM-yyyy")">                 
                </div>               
                <div class="form-group" col-md-6>
                    <label for="InputFecha">Lista De Maestros</label>
                    <div class="col-md-20">
                        @Html.DropDownList("Maestro", itemsmaestros, "Seleccionar Maestro", new { @class = "form-control" })
                    </div>
                </div>            
           
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

    </form>
</div>
