@model SchoolSundayRH.Models.Padres;
@{
    ViewData["Title"] = "Padres";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Editar Padres</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="EditPather1" >
        <div class="card-body">
            <input type="hidden" asp-for="Padreid" />
            <div class="form-row">
                <div class="form-group" col-md-6>
                    <label for="exampleInputNombre1">Primer Nombre</label>
                    <input type="text" class="form-control" asp-for="Nombre1" placeholder="Primer Nombre">
                </div>
                <div class="form-group" col-md-6>
                    <label for="exampleInputNombre2">Segundo Nombre</label>
                    <input type="text" class="form-control" asp-for="Nombre2" placeholder="Segundo Nombre">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group" col-md-6>
                    <label for="exampleInputApellido1">Primer Apellido</label>
                    <input type="text" class="form-control" asp-for="Apellido1" placeholder="Segundo Nombre">
                </div>
                <div class="form-group" col-md-6>
                    <label for="exampleInputApellido2">Segundo Apellido</label>
                    <input type="text" class="form-control" asp-for="Apellido2" placeholder="Segundo Apellido">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group" col-md-6>
                    <label for="exampleInputTelefono">Telefono</label>
                    <input type="text" class="form-control" asp-for="Telefono" name="Telefono" placeholder="Telefono">
                </div>
                <div class="form-group" col-md-6>
                    <label for="exampleInputEmail">Email</label>
                    <input type="text" class="form-control" asp-for="Email" name="Email" placeholder="Email">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group" col-md-6>
                    <label for="exampleInputSexo">Sexo</label>
                    <input type="text" class="form-control" asp-for="Sexo" name="Sexo" placeholder="Sexo">
                </div>
                <div class="form-group" col-md-6>                 
                    
                    <div id="PlaceHolderPather"></div>
                    <button type="button" class="btn btn-primary" data-toggle="ajax-pather" data-target="#addPatherChild"
                            data-url="@Url.Action("_AsociarPadre", new {id= @Model.Padreid })">
                        Asociar Padre
                    </button>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Guardar</button>
            
        </div>

    </form>
</div>

